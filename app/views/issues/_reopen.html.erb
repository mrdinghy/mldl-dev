<% modal ||= false %>
<% remote = modal ? true : false %>
<%= form_for(@issueaction, multipart: true, remote: false, html: {role: :form, 'data-model' => 'issueaction', name: 'reopenpop', id: 'reopenpop'}) do |f| %>


    <%= hidden_field(:issueaction, :issue_id, :value => @issue.id) %>
    <%= hidden_field_tag(:fromissue, true) %>
    <%= hidden_field(:issueaction, :actiontype, :value => Actiontype::REOPENED) %>


<%# Added Bootstrap classes, and help-block container for error messages %>
    <div class="field">
      <%= f.label 'Note:' %><br>
      Reactivation Notes<br>
      <%= f.text_area :actionbody,  cols: "120", rows: "12", required: true %>
    </div>
    <div class="actions">
      <%= f.submit 'Reopen Issue', :class => "btn btn-danger" %>
      Action will remove issue resolution date and save it in history table.
    </div>
<% end %>

<script>
    $('#reopenpop').parsley();
</script>




