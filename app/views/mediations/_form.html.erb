<div class="container">

  <div class="panel panel-default">

    <div class="panel-heading">
      <%if params[:action] == "edit" %><h3><strong><%= @mediation.mediationcode %></strong></h3><% end %></div>

    <div class="panel-body">



      <%= simple_form_for @mediation do |f| %>
          <div class="form-horizontal">
            <% if @mediation.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@mediation.errors.count, "error") %> prohibited this mediation from being saved:</h2>

                  <ul>
                    <% @mediation.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>



            <%if params[:action] == "new" %>
                <div class="field">
                    <script type="text/javascript">
                    $(document).ready(function() {
                    $(".chosen-select").select2();
                    });

                    </script>

                    <small>Select/Search Isssue</small><br>
                    <select name="issue_id" class="chosen-select input-md form-control">
                    <option value = "">Select -></option>
                    <% Issue.all.each do |issue| %>
                        <option value="<%= issue.id %>"><%= issue.name %></option>
                    <% end %>
                    </select>

                </div>
            <% else %>

            <% end %>


                <div class="form-group">
              <%= f.label 'Mediation Start', :class => "col-sm-2 control-label" %>
              <div class='col-sm-1 input-group date' id='mediationstart'>
                <%= f.input :mediation_start, :as => :datetime_picker, :class => "form-control", :label => false %>
                <%#= f.input :real_start, as: :date_time_picker %>
              </div>
            </div>

            <script type="text/javascript">
              $(function () {
                $('#mediationstart').datetimepicker();
              });
            </script>


            <div class="form-group">
              <%= f.label 'Medation Completed', :class => "col-sm-2 control-label" %>
              <div class='col-sm-1 input-group date' id='mediationend'>
                <%= f.input :mediation_end, :as => :datetime_picker, :class => "form-control", :label => false %>

              </div>
            </div>
            <script type="text/javascript">
              $(function () {
                $('#mediationend').datetimepicker();
              });
            </script>


            <div class="field">
    <%= f.label :mediation_notes %><br>

    <%= f.text_area :mediation_notes, cols: "120", rows: "12" %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>
</div>

        </div>
      </div>
