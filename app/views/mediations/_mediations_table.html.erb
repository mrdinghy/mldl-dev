
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @tabhead %></h3>
  </div>
  <div class="panel-body">






    <table id="mediationstable"  class="hover" cellspacing="0" width="100%">
  <thead>
  <tr>
    <th>Name</th>
    <th>Issue</th>
    <th>Mediation start</th>
    <th>Mediation end</th>
    <th>Mediation notes</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @mediations.each do |mediation| %>
      <tr>
        <td><%= mediation.name %></td>
        <td><%= mediation.issue_id %></td>
        <td><%= mediation.mediation_start %></td>
        <td><%= mediation.mediation_end %></td>
        <td><%= mediation.mediation_notes %></td>
        <td><%= link_to 'Show', mediation %></td>
        <td><%= link_to 'Edit', edit_mediation_path(mediation) %></td>
        <td><%= link_to 'Destroy', mediation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>


  </div>
</div>





<script>
    $(document).ready(function() {
        $('#mediationstable').DataTable();
    } );
</script>

