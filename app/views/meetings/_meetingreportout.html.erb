


<% modal ||= false %>
<% remote = modal ? true : false %>


<% thisagenda = Agenda.find(agenda_id) %>
<% thisissue = Issue.find(thisagenda.issue_id) %>


<%= form_for(@issueaction) do |f| %>
    <div class="form-horizontal">
      <% if @issueaction.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@issueaction.errors.count, "error") %> prohibited this action from being saved:</h2>

            <ul>
              <% @issueaction.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <h3><%= thisissue.name %></h3>
      <%= hidden_field(:issueaction, :meeting_id, :value => @meeting.id) %>

      <%= hidden_field(:issueaction, :issue_id, :value => thisagenda.issue_id) %>
      <%= hidden_field_tag(:parent_id, thisissue.structure.parent_id) %>

      <%= hidden_field(:issueaction, :structure_id, :value => @meeting.structure_id) %>
      <%= hidden_field_tag(:agenda_id, agenda_id) %>

      <div class="row">
        <div class="col-sm-9">
          Report Notes from Meeting for this Issue:<br>

          <%= f.text_area :actionbody, cols: "100", rows: "12" %>


        </div>

        <div class="col-sm-3">
          <div style="font-size: 16px">

            <h3>Meeting Result</h3>



            <%= radio_button(:issueaction, 'actiontype', Actiontype::RESOLVED) %> Resolved<br>
            <%= radio_button(:issueaction,  'actiontype', Actiontype::ONGOING) %> Ongoing<br>
            <%= radio_button(:issueaction, 'actiontype', Actiontype::MEDIATION) %> Send to Mediation<br>
            <%= radio_button(:issueaction,  'actiontype', Actiontype::ESCALATED) %> Escalate Issue<br>
            <%= radio_button(:issueaction,  'actiontype', Actiontype::CANCELLED) %> Cancel Issue<br>



          </div>
        </div>
      </div>




      <div class="pull-right"><%= f.submit 'Record Meeting Result', :class => "btn btn-primary" %></div>
      <br><br>
    </div>
<% end %>