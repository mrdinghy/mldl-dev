


<% modal ||= false %>
<% remote = modal ? true : false %>


<% thisissue = Issue.find(issue_id) %>


<%= form_for(@issueaction) do |f| %>
    <div class="form-horizontal">
      <% if @issueaction.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@issueaction.errors.count, "error") %> prohibited this action from being saved:</h2>

            <ul>
              <% @issueaction.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <h3><%= thisissue.name %></h3>
      <%= hidden_field_tag(:meeting_id, @meeting.id) %>
      <%= hidden_field_tag(:issue_id, thisissue.id) %>
      <%= hidden_field_tag(:parent_id, thisissue.structure.parent_id) %>

      <%= hidden_field_tag(:structure_id, @meeting.structure_id) %>
      <%= hidden_field_tag(:frommeeting, 1) %>

  <div class="row">
    <div class="col-sm-9">
        Report Notes from Meeting for this Issue:<br>

      <%= f.text_area :actionbody, cols: "100", rows: "12" %>


      </div>

        <div class="col-sm-3">
<div style="font-size: 16px">

<h3>Meeting Result</h3>



  <%= radio_button :issueaction, 'actiontype', Actiontype::MEETING_RESULT_RESOLVED %> Resolved<br>
  <%= radio_button(:issueaction,  'actiontype', Actiontype::MEETING_RESULT_ONGOING) %> Ongoing<br>
  <%= radio_button(:issueaction, 'actiontype', Actiontype::MEETING_RESULT_MEDIATION) %> Send to Mediation<br>
  <%= radio_button(:issueaction,  'actiontype', Actiontype::MEETING_RESULT_ESCALATED) %> Escalate Issue<br>
  <%= radio_button(:issueaction,  'actiontype', Actiontype::MEETING_RESULT_CANCELLED) %> Cancel Issue<br>



</div>
</div>
    </div>




          <div class="pull-right"><%= f.submit :class => "btn btn-primary" %></div>
<br><br>
    </div>
<% end %>

