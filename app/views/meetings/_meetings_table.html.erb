


  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= @tabhead %></h3>
    </div>
    <div class="panel-body">

      <!---<table id="meetingstable"  class="hover" cellspacing="0" width="100%">--->

      <table id="meetingstable" class="table table-striped table-hover">

        <thead>
        <tr>
          <th>ID</th>
          <th>Status</th>
          <th>Meeting Date</th>
          <th>Time Start</th>
          <th>Name</th>
         <th>Structure</th>
          <th>Agenda Issues</th>


        </tr>
        </thead>


        <tbody>
        <% @meetings.each do |meeting| %>

        <% agendaitems = Issueaction.where('meeting_id = ? and actiontype = ?', meeting.id, Actiontype::AGENDA) %>
            <tr>
              <td><%= link_to meeting.meetingid, meeting %></td>
              <td>
                <%= meeting.status %>
              </td>
              <td><%=  meeting.real_start.strftime("%m/  %d/%Y") if meeting.real_start %></td>
              <td><%=  meeting.real_start.strftime("%R") if meeting.real_start %></td>

              <td><%= meeting.name %></td>
                         <td>
                           <% if meeting.structure_id.present? && meeting.structure_id.to_i > 0 %>
                             <%= link_to meeting.structure.name, meeting.structure if meeting.structure_id %>
                               <% end %>
                               </td>

              <td><%= agendaitems.count if agendaitems %></td>

            </tr>
        <% end %>
        </tbody>
      </table>


    </div>
  </div>





      <script>
        $(document).ready(function() {
          $('#meetingstable').DataTable();
        } );
      </script>


