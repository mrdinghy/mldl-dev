    <div class="panel panel-default">
    <div class="panel-heading">

    </div>
    <div class="panel-body">



      <%= simple_form_for(@person) do |f| %>
      <div class="form-horizontal">
      <% if @person.errors.any? %>
         <div id="error_explanation">
            <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

            <ul>
            <% @person.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
          </div>
      <% end %>

        <div class="form-group">
          <%= f.label :salut, :class => "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.input :salut, label: false, :class => "form-control", input_html: {:style => 'width: 80px'} %>

          </div>
        </div>



        <div class="form-group">
          <%= f.label :name_first, :class => "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.input :name_first, label: false, :class => "form-control", :required => "required", input_html: {:style => 'width: 250px'} %>

          </div>
        </div>

        <div class="form-group">
          <%= f.label :name_last, :class => "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.input :name_last, label: false, :class => "form-control", :required => "required", input_html: {:style => 'width: 250px'} %>

          </div>
        </div>


        <div class="form-group">
          <%= f.label :suffix, :class => "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.input :suffix, label: false, :class => "form-control", input_html: {:style => 'width: 80px'} %>

          </div>
        </div>


        <div class="form-group">
          <%= f.label :title, :class => "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.input :title, label: false, :class => "form-control", input_html: {:style => 'width: 200px'} %>

          </div>
        </div>


        <div class="form-group">
          <%= f.label :gender, :class => "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.input :gender, collection: Gender.to_a , label: false,  input_html: {:style => 'width: 120px' }%>

          </div>
        </div>


        <%#= f.select(:gender, Gender.to_a, :include_blank => true, :class => "form-control") %>

          <div class="form-group">
            <%= f.label :organization_id, :class => "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.collection_select(:organization_id, Organization.all, :id, :name, include_blank: true, :class => "form-control") %>

            </div>
          </div>
        <div class="form-group">
          <%= f.label :email, :class => "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.input :email, label: false, :class => "form-control", input_html: {:style => 'width: 200px'} %>

          </div>
        </div>


      <div class="actions">
      <%= f.submit  :class=>"btn btn-primary" %>
      </div>

      </div>
      <% end %>



    </div>
    </div>