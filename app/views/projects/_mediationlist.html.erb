<table class="table">
  <thead>
  <td>Mediation ID</td>
  <td>Issue Code</td>
  <td>Name</td>
  <td>Issue Status</td>
  <td>Mediation Status</td>
  <td>Medation Start</td>

  <td>Medation End</td>
  <td>Resolution Date</td>
  </thead>


  <% @mediationlist.each do |mi| %>
      <% i = Issue.find(mi.issue_id) %>
      <% m = Mediation.find(mi.id) %>
      <tr><td><%= i.issuecode %> </td>
        <td width="40%"><%= i.name %> </td>
        <td><%= i.status_humanize %> </td>
        <td><%= m.result_humanize %> </td>
        <td><%= m.mediate_start.strftime("%m/%d/%Y") %> </td>
        <td><%= m.mediate_end.strftime("%m/%d/%Y") if m.mediate_end %> </td>

        <td><%= i.resolution_date.strftime("%m/%d/%Y") if !i.resolution_date.nil? %> </td>
      </tr>
  <% end %>
</table>