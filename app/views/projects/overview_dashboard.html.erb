  <div class="col-lg-6">





















    <div class="panel panel-info">
    <div class="panel-heading">
      <div class="panel-title">Summary to Date</div>
    </div>
    <div class="panel-body">
      <div class="col-lg-12">
      <!-- START widget-->
      <div class="panel widget">
        <div class="row row-table row-flush">
          <div class="col-xs-6 bb br">
            <div class="row row-table row-flush">
              <div class="col-xs-4 text-center text-info">
                <em class="fa fa-wrench fa-2x"></em>
              </div>
              <div class="col-xs-8">
                <div class="panel-body text-center">
                  <h4 class="mt0"><%= Issue.all.count %></h4>
                  <p class="mb0 text-muted">Total Issues</p>
                </div>
              </div>
            </div>
          </div>
          <div class="col-xs-6 bb">
            <div class="row row-table row-flush">
              <div class="col-xs-4 text-center text-danger">
                <em class="fa fa-users fa-2x"></em>
              </div>
              <div class="col-xs-8">
                <div class="panel-body text-center">
                  <h4 class="mt0"><%= Meeting.all.count + Mediation.all.count %></h4>
