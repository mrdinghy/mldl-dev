<style>
  .cscbox, .dscbox, .cfbox, .blankbox  {
      min-height: 40px;
      padding: 1px;
      margin-top: 8px;
  }

.cscbox {
    background-color: #fff;
    color: #000;
    border: 1px solid #553982;
    font-size: 14px;
}
  .dscbox {
      background-color: #fff;
      color: #000;
      border: 1px solid #478500;
      font-size: 14px;

  }

  .cfbox {
      background-color: #fff;
      color: #000;
      border: 1px solid #CCC;
      font-size: 14px;

  }

  .blankbox {

      border: 1px #fff solid;
  }
        .short {
            color: #cccccc;
            font-size: 22px;
            font-weight: bold;
        }
</style>




<section>
  <!-- Page content-->
  <div class="content-wrapper">




    <h4 class="page-header">MLDL Structures</h4>
    <!-- START row-->



    <div class="row">
      <% @csc_structures.each do |csc| %>

          <%# csc.getdistricts(csc.county_id) %>

          <div class="col-sm-3">
            <div class="col-sm-12 cscbox">

              <span class="short"><%= csc.short %></span> <strong><%= link_to csc.name, csc %></strong>


              <div class="pull-right">
                <%= fa_icon "users", :style => "color: green" %>
                <%= csc.qmeetings(0,0,csc.id,0).count %>
                <%= fa_icon "wrench", :style => "color: blue" %>
                <%= csc.openissues(0,0,csc.id,0).count %>
              </div>

            </div>
            <% csc.getdistricts(csc.county_id).each do |dsc| %>


                <div class="col-sm-2">&nbsp;</div>
                <div class="col-sm-10 dscbox">

                  <span class="short"><%= dsc.short %></span>      <strong><%= link_to dsc.name, dsc %></strong>

                  <div class="pull-right">

                    <%= fa_icon "users", :style => "color: green" %>
                    <%= dsc.qmeetings(0,0,dsc.id,0).count %>

                    <%= fa_icon "wrench", :style => "color: blue" %>
                    <%= dsc.openissues(0,0,dsc.id,0).count %>
                  </div>
                </div>

                <% csc.getcfs(dsc.district_id).each do |cf| %>

                    <div class="col-sm-4">&nbsp;</div>
                    <div class="col-sm-8 cfbox">
                      <span class="short"><%= cf.short %></span><strong><%= link_to cf.name, cf %></strong>

                      <div class="pull-right">
                        <%= fa_icon "users", :style => "color: green" %>
                        <%= cf.qmeetings(0,0,cf.id,0).count %>

                        <%= fa_icon "wrench", :style => "color: blue" %>
                        <%= cf.openissues(0,0,cf.id,0).count %>
                      </div>
                    </div>
                <% end %>

            <% end %>

          </div>
      <% end %>













    </div>
    <!-- END row-->










  </div>
</section>
