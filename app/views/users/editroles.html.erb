

<div class="content-wrapper widerbox">


  <%= link_to 'Back to Meetings', meetings_path %><br>
  <h3>Edit Roles</h3>



  <div class="row">


    <div class="col-sm-10">
      <div class="panel panel-default">

        <div class="panel-body">
          <%= form_for(@user) do |f| %>
          <h3>User</h3>
          <p>Name: <%= f.text_field :name %></p>
          <p>Email: <%= f.text_field :email %></p>



              <div class="col-sm-3 chkpanel">
                <label class="label">Roles</label>
                <div class="row">
                  <%= hidden_field_tag "user[role_ids][]", nil %>
                  <% @role_list.all.each do |role| %>
                      <%= check_box_tag "user[role_ids][]", role.id,
                                        @user.role_ids.include?(role.id), id: dom_id(role) %>
                      <%= label_tag dom_id(role), role.name %><br>
                  <% end %>

                </div>



                  <div class="actions">
                    <%= f.submit :class => "btn btn-primary" %>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

