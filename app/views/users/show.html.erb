

<div class="content-wrapper widerbox">

  <div class="row">


    <div class="col-sm-12">
      <div class="panel panel-info">
        <div class="panel-heading">


        </div>
        <div class="panel-body">

          <div class="col-sm-3">


          <h3>User</h3>
            <p>Name: <%= @user.name if @user.name %></p>
            <p>Email: <%= @user.email if @user.email %></p>
          <p>Role: <%= @user.mldlrole_humanize %></p>


            <hr>


            <%= form_for(@user, :url => admin_password_reset_path) do |f| %>
                <%= f.hidden_field :id, :value => @user.id %>
                <div class="form-group">
                  <%= f.label :password %>
                  <%= f.password_field :password, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :password_confirmation %>
                  <%= f.password_field :password_confirmation, class: 'form-control' %>
                </div>
                <%= f.submit "Reset Pasword", class: 'btn btn-secondary btn-sm', data: {confirm: 'Are You Sure?'} %>
            <% end %>

          </div>


    <div class="col-sm-3">
          <h4>Assigned to Structures</h4>
          <ul>
            <% @mystructures.each do |mgmt| %>
                <li><%= link_to mgmt.structure.name, mgmt.structure %></li>
            <% end %>
          </ul>
  </div>



          <div class="col-sm-3">

            <h4>Issue Action History</h4>





            <ul>
             Under development
            </ul>






          </div>








</div>
    </div>
