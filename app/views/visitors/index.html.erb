  <div class="col-md-6">
  <div class="panel panel-default">

    <div class="panel-heading">Latest Issues</div>

    <div class="panel-body">



  <table class="table">
    <% @latestissues.each do |i| %>
        <tr>
          <td><%= i.created_at.strftime("%F") %></td>
          <td width="50%"><%= link_to i.name, i %></td>
          <td><%= i.structure.name  if i.structure_id %></td>
        </tr>
    <% end %>
  </table>




    </div></div>
</div>

