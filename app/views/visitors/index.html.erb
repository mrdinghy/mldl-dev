  <div class="col-sm-3">
<h3>Monthly Activity Report</h3>


  <%= form_tag actionreport_path, :method => :get do %>
      <%= select_tag(:reportmonth, options_for_select(Month.to_a), :include_blank => 'Select Month >') %><br><br>

      <%= select_tag(:reportyear, options_for_select(['2014','2015', '2016']), :include_blank => 'Select Year')  %><br><br>
      <div class="actions">
        <%= submit_tag 'Generate', :class => 'btn btn-primary'%>
      </div>
  <% end %>


